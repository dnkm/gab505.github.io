/* Styles go here */
:root {
  --color1: #002626;
  --color2: #0E4749;
  --color3: #95C623;
  --color4: #E55812;
  --color5: #EFE7DA;

}

*
  margin 0
  padding 0
  box-sizing border-box
  background: var(--color5);
  
h1,h2,h3
  font-family: 'Gentium Basic', serif;
body
  font-family: 'Ubuntu', sans-serif;
  

aside.left
  height 100vh
  width 200px
  position fixed
  left 0
  top 0
  display flex
  flex-direction column
  justify-content center
  align-items center
  > *
    text-align center
    margin-bottom 5px
  .logo
    display grid
    grid-template-columns 30px 30px
    grid-template-rows 30px 30px
    align-content center
    margin-bottom 30px
    transition all 1s
    div
      line-height 30px
      transition all 1s
    .black
      background black
      color white
    .white
      background white
      color black
    &:hover
      transform: scale(1.2)
      .black
        background white
        color black
      .white
        background black
        color white
 
.category
  margin-left 200px
  height: 50px;
  
main
  margin-left 200px
  min-height 1000px
  .home
    column-gap 0px
    column-count 3
    
    .box
      position relative
      overflow hidden
      .cover
        position absolute
        background white
        opacity 0
        display none
        width 100%
        height 100%  
        top 0
        left 0
        transition all 5s
      &:hover
        .cover
          display block
          opacity 0.7
        .title
          display block
      .title  
        position absolute
        display none
        bottom 5px
        left 5px
        color white
        text-shadow 1.5px 1.5px 0px black

      
  